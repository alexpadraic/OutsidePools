<div class="container">
  <form action='/users/new' method='POST'>

  <div class="form-group">
    <label for="exampleInputEmail1">Name</label>

    <input type="text" class="form-control" id="exampleInputEmail1" name="user[name]" placeholder="Name">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" class="form-control" id="exampleInputEmail1" name="user[email]" placeholder="Email">
  </div>

  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>

    <input type="password" class="form-control" id="exampleInputPassword1" name="user[password]" placeholder="Password">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Confirm Password</label>

    <input type="password" class="form-control" id="exampleInputPassword1" name="user[password_confirmation]" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>

  </form>

  <% if @error %>
    <%= @error %>
  <% end %>

</div>
